{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./www",
    "rootDir": "src",
    "types": ["web"],
    "declaration": true,
    "noUnusedLocals": false,
    "composite": true,
    "skipLibCheck": true
  },
  "isolatedModules": true,
}
